doctype html
html
  head
    style.
      body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
      .container { max-width: 600px; margin: 0 auto; padding: 20px; }
      .button { 
        display: inline-block; 
        padding: 10px 20px; 
        background-color: #4CAF50; 
        color: white; 
        text-decoration: none; 
        border-radius: 5px; 
        margin: 20px 0;
      }
  body
    .container
      h2 Hello #{firstName},
      p You requested a password reset. Click the button below to reset your password.
      p This link is valid for 10 minutes.
      a(href=`${url}`, class='button') Reset Password
      p If you didn't request this, please ignore this email.
      p Thanks,
      p The #{process.env.APP_NAME || 'App'} Team
